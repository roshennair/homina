{
	"compilerOptions": {
		"target": "es5",
		"module": "esnext",
		"allowJs": true,
		"jsx": "react-jsx",
		// "outDir": "build/dist",
		"removeComments": true,
		"strict": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],
		"allowSyntheticDefaultImports": true,
		"noFallthroughCasesInSwitch": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"skipLibCheck": true
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"build"
	]
}