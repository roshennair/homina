{
	"name": "homina",
	"version": "1.0.0",
	"description": "A full-stack web application that stores your contacts",
	"main": "server.js",
	"scripts": {
		"dev": "tsnd --respawn -T src/server.ts",
		"build": "tsc && rm -rf src npm run build-client",
		"build-client": "mv -i -v client dist/ && cd dist/client && npm install && npm run build",
		"start": "node dist/server.js"
	},
	"author": "Roshen Nair",
	"license": "ISC",
	"dependencies": {
		"bcryptjs": "^2.4.3",
		"connect-redis": "^6.0.0",
		"cors": "^2.8.5",
		"express": "^4.17.1",
		"express-async-errors": "^3.1.1",
		"express-session": "^1.17.2",
		"morgan": "^1.10.0",
		"pg": "^8.7.1",
		"redis": "^3.1.2"
	},
	"devDependencies": {
		"@types/bcryptjs": "^2.4.2",
		"@types/connect-redis": "^0.0.17",
		"@types/express": "^4.17.13",
		"@types/express-session": "^1.17.4",
		"@types/morgan": "^1.9.3",
		"@types/node": "^16.4.13",
		"@types/pg": "^8.6.1",
		"@types/redis": "^2.8.31",
		"nodemon": "^2.0.7",
		"ts-node-dev": "^1.1.8",
		"typescript": "^4.3.5"
	},
	"engines": {
		"node": "16.6.1"
	}
}